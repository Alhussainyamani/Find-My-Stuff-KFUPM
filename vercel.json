{
    "builds": [
        { "src": "phase-6/server.js", "use": "@vercel/node" },
        { "src": "phase-5/**", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "phase-6/server.js" },
        { "src": "/", "dest": "/phase-5/Login.html" }
    ],
    "env": {
        "MONGO_URI": "@mongo_uri",
        "JWT_SECRET": "@jwt_secret"
    }
}